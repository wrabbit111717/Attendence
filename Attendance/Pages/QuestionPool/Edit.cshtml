@page
@model Attendance.Pages.QuestionPool.EditModel
@using System.Linq
@{
    ViewData["Title"] = "Question Pool";
    ViewData["Menu"] = "questionPool";
    ViewData["Step"] = "Home";
}
<div class="container-fluid">
<h1>Edit</h1>

<h4>QuestionPool</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="QuestionPool.CategoryID" value="@(Model.CategoryID)" />
            <input type="hidden" asp-for="QuestionPool.CategoryCode" value="@(Model.CategoryCode)" />
            <input type="hidden" asp-for="QuestionPool.QuestionTypeID" value="@(Model.QuestionTypeID)" />
            <input type="hidden" asp-for="QuestionPool.CategoryNewID" value="@(Model.CategoryNewID)" />
            <input type="hidden" asp-for="QuestionPool.ParentId" value="@(Model.QuestionPool.ParentId)" />
            <input type="hidden" asp-for="QuestionPool.Parent" value="@(Model.QuestionPool.Parent)" />

            @if (Model.QuestionPool.Children != null && Model.QuestionPool.Children.Count > 0)
            {
                @for (var i = 0; i < Model.QuestionPool.Children.Count; i++)
                {
                    <input type="hidden" asp-for="QuestionPool.Children[i].CategoryID" value="@(Model.QuestionPool.Children[i].CategoryID)" />
                    <input type="hidden" asp-for="QuestionPool.Children[i].CategoryCode"  value="@(Model.QuestionPool.Children[i].CategoryCode)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].CategoryNewID" value="@(Model.QuestionPool.Children[i].CategoryNewID)" />
                    <input type="hidden" asp-for="QuestionPool.Children[i].comment" value="@(Model.QuestionPool.Children[i].comment)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].Origin" value="@(Model.QuestionPool.Children[i].Origin)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].Parent" value="@(Model.QuestionPool.Children[i].Parent)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].ParentId" value="@(Model.QuestionPool.Children[i].ParentId)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].question" value="@(Model.QuestionPool.Children[i].question)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].questioncode" value="@(Model.QuestionPool.Children[i].questioncode)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].questionid" value="@(Model.QuestionPool.Children[i].questionid)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].QuestionTypeID" value="@(Model.QuestionPool.Children[i].QuestionTypeID)"/>
                    <input type="hidden" asp-for="QuestionPool.Children[i].Children" value="@(Model.QuestionPool.Children[i].Children)"/>
                }
            }


            <input type="hidden" name="selectedCategoryNewID" id="selectedCategoryNewID" value="@(Model.CategoryNewID)" />
            <input type="hidden" name="selectedTypeID" id="selectedTypeID" value="@(Model.QuestionTypeID)" />
            <input type="hidden" name="PageIndex" id="PageIndex" value="@(Model.PageIndex)" />
            <input type="hidden" name="CurrentFilterCategory" id="CurrentFilterCategory" value="@(Model.CurrentFilterCategory)" />


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionPool.questionid" />
            <div class="form-group">
                <label asp-for="QuestionPool.questioncode" class="control-label"></label>
                <input asp-for="QuestionPool.questioncode" class="form-control" />
                <span asp-validation-for="QuestionPool.questioncode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionPool.question" class="control-label"></label>
                <input asp-for="QuestionPool.question" class="form-control" />
                <span asp-validation-for="QuestionPool.question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionPool.comment" class="control-label"></label>
                <input asp-for="QuestionPool.comment" class="form-control" />
                <span asp-validation-for="QuestionPool.comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Questions/Index"
       asp-route-pageIndex="@(Model.PageIndex)"
       asp-route-qPageIndex="1"
       asp-route-selectedCategoryNewID="@Model.CategoryNewID"
       asp-route-selectedTypeID="@Model.QuestionTypeID"
       asp-route-currentFilterCategory="@Model.CurrentFilterCategory"
       asp-route-currentFilterQuestionPool="">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
