@page
@model Attendance.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_baseLayout.cshtml";
}

<div class="container-fluid">

    <div id="login">
        <br />
        <h3 class="text-center pt-5">Welcome to Attendance</h3>
        <br />
        <div class="container">
            <div class="row justify-content-center align-items-center">
                @if (TempData["message"] != null)
                {
                    var alertType = "alert-info";

                    switch (Model.AlertType)
                    {
                        case Data.PageAlertType.Info:
                            alertType = "alert-info";
                            break;
                        case Data.PageAlertType.Success:
                            alertType = "alert-success";
                            break;
                        case Data.PageAlertType.Warning:
                            alertType = "alert-warning";
                            break;
                        case Data.PageAlertType.Danger:
                            alertType = "alert-danger";
                            break;
                        case Data.PageAlertType.Primary:
                            alertType = "alert-primary";
                            break;
                    }
                    <div class="alert @alertType mb-0" algin="center">
                        <strong>@TempData["result"]</strong> @TempData["message"]
                    </div>
                }
            </div>
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="@Model.UserName"></label>:<br>
                                <input asp-for="@Model.UserName" type="text" class="form-control" />
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password"></label>:<br>
                                <input asp-for="@Model.Password" type="password" class="form-control" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="remember-me"><span>Remember me</span> <span><input type="checkbox" asp-for="@Model.RememberMe" /></span></label><br>
                                <input type="submit" name="submit" class="btn btn-info btn-md bg-success" value="Sign In">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}